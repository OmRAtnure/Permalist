<%- include('partials/header.ejs'); -%>

    <style>
        input[type="text"] {
            background-color: rgb(202, 197, 197);
            width: 100%;
        }

        input {
            background-color: rgb(202, 197, 197);
            width: 100%;
            height: 60px;
        }

        @media(max-width:700px) {
            input[type="text"] {
                width: 80%;
                margin-left: 10%;
            }

            input[type="password"] {
                width: 80%;
                margin-left: 10%;

            }
        }
    </style>
    <main>
        <div class="custom-box">
            <form action="/register" method="post" class="max-w-sm mx-auto">
                <input type="hidden" name="login" value="login">
                <div class="mb-5 my-8">
                    <label for="user_id" class="block mb-2  font-large text-gray-900 dark:text-white mobileView">
                        user id</label>
                    <input name="user_id" type="text" id="user_id"
                        class="shadow-xs bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-xs-light"
                        placeholder="name" autocomplete="off" autofocus="true" required />
                </div>
                <div class="mb-5">
                    <label for="password1" class="block mb-2  font-medium text-gray-900 dark:text-white mobileView">
                        password</label>
                    <input name="password1" type="password" id="password1"
                        class="shadow-xs bg-gray-50 border border-gray-300  text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-xs-light"
                        placeholder="name@123" autocomplete="off" autofocus="true" required />
                </div>
                <div class="mb-5">
                    <label for="password2" class="block mb-2  font-medium text-gray-900 dark:text-white mobileView">
                        re-enter password</label>
                    <input name="password2" type="password" id="password2"
                        class="shadow-xs bg-gray-50 border border-gray-300  text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-xs-light"
                        placeholder="name@123" autocomplete="off" autofocus="true" required />
                </div>
                <div class="mb-5">
                    <label for="family_code" class="block mb-2  font-medium text-gray-900 dark:text-white mobileView">
                        Family code(optional)</label>
                    <input name="family_code" type="text" id="family_code"
                        class="shadow-xs bg-gray-50 border border-gray-300  text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-xs-light"
                        placeholder="name@123" autocomplete="off" autofocus="true"  />
                </div>
                <div class="mb-5">
                    <label for="perm" class="block mb-2  font-medium text-gray-900 dark:text-white mobileView">
                        Key</label>
                    <input name="perm" type="password" id="perm"
                        class="shadow-xs bg-gray-50 border border-gray-300  text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-xs-light"
                         autocomplete="off" autofocus="true" required />
                </div>
                <% if(locals.message){ %>
                    <div class="message">
                        <p>
                            <%= message %>
                        </p>
                    </div>
                    <% } %>
                        <button type="submit"
                            class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-3 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 my-8 mobileView">register</button>
            </form>
        </div>
    </main>


    <%- include('partials/footer.ejs'); -%>